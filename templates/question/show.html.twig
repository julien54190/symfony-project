{% extends "base.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/question_show.css') }}">
{% endblock %}


{% block title %}{{ question.title }}{% endblock %}


{% block body %}

    <div class="block">
        <div class="d-flex flex-row-nowrap align-items-center pb-30">
            <h3 class="mr-10">{{ question.title }}</h3>
            <div class="question-tag">QUESTION</div>
            <img class="avatar ml-auto" src="https://randomuser.me/api/portraits/men/36.jpg">
        </div>
        <p class="question-text">{{ question.content }}</p>
        <div class="separator"></div>
        {% for comment in question.comments %}
            <div class="question-response-elem mb-20">
                <div class="d-flex flex-row-nowrap align-items-center pb-10">
                    <img src="https://randomuser.me/api/portraits/men/37.jpg" alt="" class="avatar mr-10">
                    <p class="clickable mr-10">Jean Louis</p>
                    <div class="question-tag">REPONSE</div>
                    <small class="ml-auto">12/12/21</small>
                </div>
                <p class="comment-response-text">{{ comment.content }}</p>
                <div class="separator"></div>
            </div>
        {% endfor %}
        <div class="separator"></div>
        <h3 class="pb-20">Votre r√©ponse</h3>
        <div class="comment-form">
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <button class="btn btn-primary">soumettre</button>
            {{ form_end(form)}}
        </div>
    </div>
{% endblock %}