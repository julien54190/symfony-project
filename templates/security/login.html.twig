{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="block">
		<h2 class="mb-20">Connexion</h2>
		<form action="{{ path('login') }}" method="post">
			<div class="form-row">
				<label for="email">Email</label>
				<input type="text" id="email" autofocus name="_username" value="{{ username }}" required>
			</div>
			<div class="form-row">
				<label for="password">Password</label>
				<input type="password" id="password" name="_password" required>
			</div>
		</div>
		<div class="form-row">
			<label for="remember_me">
				<input type="checkbox" id="remember_mer" name="_remember_mer">
				Se souvenir de moi
			</label>
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		{% if error %}
			<ul class="form-errors pb-20">
				<li>{{ error.messageKey | trans(error.messageData, 'security')}}</li>
			</ul>

		{% endif %}


		<button class="btn btn-primary">Connexion</button>
	</form>


</div>{% endblock %}


